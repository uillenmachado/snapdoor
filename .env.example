# ========================================
# SNAPDOOR CRM - Environment Variables
# Complete setup for production-ready SaaS
# ========================================

# ============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================
# Get these values from https://supabase.com/dashboard/project/_/settings/api

VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_URL="https://your-project-id.supabase.co"
VITE_SUPABASE_PUBLISHABLE_KEY="your-anon-public-key"

# Service Role Key (NEVER expose in frontend! Use only in Node.js scripts)
# Required for bootstrap-admin.ts and server-side operations
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ============================================
# HUNTER.IO API (OPTIONAL - Email Enrichment)
# ============================================
# API Key for email finder and lead enrichment
# Get your key at: https://hunter.io/api_keys
VITE_DISCOVERY_API_KEY="your_hunter_api_key_here"
VITE_HUNTER_API_KEY="your_hunter_api_key_here"

# Configurações opcionais da IA (podem manter os valores padrão)
VITE_DISCOVERY_RATE_LIMIT=60
VITE_DISCOVERY_CACHE_DURATION=3600000
VITE_DISCOVERY_MAX_LEADS=100
VITE_DISCOVERY_DEBUG=false
VITE_DISCOVERY_SANDBOX=false

# ============================================
# STRIPE CONFIGURATION (OPTIONAL)
# ============================================
# Get these from https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# ============================================
# APPLICATION CONFIGURATION
# ============================================
VITE_APP_URL="http://localhost:8080"
VITE_APP_NAME="Snapdoor CRM"
