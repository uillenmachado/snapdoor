# =====================================================
# SNAPDOOR CRM - Environment Variables
# Copie este arquivo para .env e preencha com suas chaves
# NUNCA commite o arquivo .env (já está no .gitignore)
# =====================================================

# ============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================
# Get these values from https://supabase.com/dashboard/project/_/settings/api

VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_URL="https://your-project-id.supabase.co"
VITE_SUPABASE_PUBLISHABLE_KEY="your-anon-public-key"

# Service Role Key (backend/migrations only - NEVER expose to frontend)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ============================================
# HUNTER.IO API (REQUIRED FOR LEAD ENRICHMENT)
# ============================================
# Get your API key from: https://hunter.io/api_keys
# Used for email finding, verification, and lead enrichment

VITE_HUNTER_API_KEY="your-hunter-api-key-here"

# ============================================
# SNAPDOOR AI DISCOVERY SYSTEM (OPTIONAL)
# ============================================
# API Key para sistema de descoberta SnapDoor
# IMPORTANTE: Obtenha sua chave em: https://hunter.io/api_keys

VITE_DISCOVERY_API_KEY="your-discovery-api-key-here"

# Configurações opcionais da IA (podem manter os valores padrão)
VITE_DISCOVERY_RATE_LIMIT=60
VITE_DISCOVERY_CACHE_DURATION=3600000
VITE_DISCOVERY_MAX_LEADS=100
VITE_DISCOVERY_DEBUG=false
VITE_DISCOVERY_SANDBOX=false

# ============================================
# STRIPE CONFIGURATION (REQUIRED FOR PAYMENTS)
# ============================================
# Get these from https://dashboard.stripe.com/apikeys
# Used for payment processing and subscriptions

# Public key (frontend) - Starts with pk_test_ or pk_live_
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Secret key (backend only) - Starts with sk_test_ or sk_live_
# ⚠️ NEVER expose this to frontend
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"

# Webhook secret - Starts with whsec_
# Get from: Developers > Webhooks > Add endpoint
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Price IDs for products (get from Stripe Dashboard > Products)
# These are needed for checkout sessions
STRIPE_PRICE_PRO_MONTHLY="price_xxx_pro_monthly"
STRIPE_PRICE_ENTERPRISE_MONTHLY="price_xxx_enterprise_monthly"
STRIPE_PRICE_CREDITS_10="price_xxx_credits_10"
STRIPE_PRICE_CREDITS_50="price_xxx_credits_50"
STRIPE_PRICE_CREDITS_100="price_xxx_credits_100"

# ============================================
# RESEND (EMAIL TRANSACTIONAL) - OPTIONAL
# ============================================
# Get API key from: https://resend.com/api-keys
# Used for sending transactional emails (welcome, password reset, etc)

RESEND_API_KEY="re_your_resend_api_key"
RESEND_FROM_EMAIL="noreply@snapdoor.com.br"
RESEND_FROM_NAME="SnapDoor CRM"

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment (development | production | test)
NODE_ENV="development"

# Application URL (change to your production domain)
# Development: http://localhost:8080
# Production: https://app.snapdoor.com.br
VITE_APP_URL="http://localhost:8080"

# Production domain (without protocol, for CORS/webhooks)
# Example: app.snapdoor.com.br
VITE_APP_DOMAIN="localhost:8080"

# Application name
VITE_APP_NAME="Snapdoor CRM"

# ============================================
# SENTRY MONITORING (OPTIONAL - PRODUCTION)
# ============================================
# Get these from https://sentry.io/settings/
# Used for error tracking and performance monitoring

VITE_SENTRY_DSN="https://your-sentry-dsn@o123456.ingest.sentry.io/7654321"
SENTRY_ORG="your-org-slug"
SENTRY_PROJECT="snapdoor"
SENTRY_AUTH_TOKEN="your-auth-token-for-sourcemaps-upload"

# =====================================================
# SECURITY WARNING
# =====================================================
# IMPORTANT: Never commit the .env file to git
# Keep all API keys and secrets safe and private
# Rotate keys immediately if accidentally exposed
# =====================================================
